<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion>preview</LangVersion>
		<RootNamespace>SilentOrbit.JsonDiff</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.Text.Json" Version="8.0.5" />
	</ItemGroup>

	<!-- NuGet -->
	<PropertyGroup>
		<PackageId>SilentOrbit.JsonDiff.Abstractions</PackageId>
		<Version>0.1.5</Version>
		<Authors>hultqvist</Authors>
		<Company>SilentOrbit</Company>
		<Title>JSON Diff</Title>
		<PackageProjectUrl>https://github.com/silentorbit/JsonDiff</PackageProjectUrl>
		<RepositoryUrl>https://github.com/silentorbit/JsonDiff</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>

		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<PackageReadmeFile>README.Abstractions.md</PackageReadmeFile>

		<Description>
			Track and generates diff of custom classes.
			Compatible with System.Text.Json for serialization.

			This library contain the interfaces used in code generated by `SilentOrbit.JsonDiff.Generator`
			C# Incremental Source Generator.
		</Description>
	</PropertyGroup>
	<ItemGroup>
		<None Include="README.Abstractions.md" Pack="true" PackagePath="." />
	</ItemGroup>
</Project>
